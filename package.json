{
  "name": "@pnwairfire/piles-calculator",
  "version": "1.0.0",
  "description": "Piles fuel load calculator",
  "author": "Joel Dubowy",
  "license": "GPL-3.0-or-later",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pnwairfire/piles-calculator.git"
  },
  "bin": {
    "piles-calc": "./dist/bin/piles-calc.js",
    "piles-calc-server": "./dist/bin/piles-calc-server.js"
  },
  "scripts": {
    "build": "npm run build:main && npm run build:bin",
    "build:main": "esbuild src/index.js --bundle --platform=node --outfile=dist/index.js",
    "build:bin": "esbuild src/bin/piles-calc.js --bundle --platform=node --outfile=dist/bin/piles-calc.js && esbuild src/bin/piles-calc-server.js --bundle --platform=node --outfile=dist/bin/piles-calc-server.js",
    "test": "jest"
  },
  "keywords": [
    "piles",
    "fuels"
  ],
  "bugs": {
    "url": "https://github.com/pnwairfire/piles-calculator/issues"
  },
  "homepage": "https://github.com/pnwairfire/piles-calculator#readme",
  "devDependencies": {
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "jest-esbuild": "^0.3.0"
  }
}
